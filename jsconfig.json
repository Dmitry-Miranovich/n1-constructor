{
  "compilerOptions": {
    "checkJs": true,
    "strict": false,
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/app/**/*"],
  "exclude": ["node_modules", "build", "dist"]
}
